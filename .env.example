# ClipForge — Environment variables
# Copy to .env and edit as needed:  cp .env.example .env

# ── Server ───────────────────────────────────────────────────────
PORT=8000
CLIPFORGE_PUBLIC_URL=http://localhost:8000

# ── Storage paths (inside Docker, leave as-is) ──────────────────
# CLIPFORGE_UPLOAD_DIR=/data/uploads
# CLIPFORGE_OUTPUT_DIR=/data/outputs
# CLIPFORGE_WORK_DIR=/data/tmp_work

# ── Redis ────────────────────────────────────────────────────────
# REDIS_URL=redis://redis:6379/0

# ── Limits ───────────────────────────────────────────────────────
CLIPFORGE_MAX_UPLOAD_MB=500
CLIPFORGE_MAX_DURATION=3600

# ── Auth (leave empty to disable) ───────────────────────────────
CLIPFORGE_API_KEY=
